{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "required": ["id", "name", "category"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Product ID",
      "x-validators": [
        { "name": "is_positive" }
      ]
    },
    "name": {
      "type": "string",
      "description": "Product name",
      "minLength": 1,
      "maxLength": 200,
      "x-validators": [
        { "name": "non_empty_string" }
      ]
    },
    "category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "x-validators": [
            { "name": "is_positive" }
          ]
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "parent": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            }
          }
        }
      },
      "required": ["id", "name"]
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku": {
            "type": "string",
            "x-validators": [
              {
                "name": "matches_regex",
                "params": { "pattern": "^[A-Z0-9]{3}-[A-Z0-9]{6}$" }
              }
            ]
          },
          "size": {
            "type": "string",
            "enum": ["small", "medium", "large", "xlarge"]
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "inventory": {
            "type": "object",
            "properties": {
              "quantity": {
                "type": "integer",
                "minimum": 0,
                "x-validators": [
                  {
                    "name": "greater_than_or_equal_to",
                    "params": { "threshold": 0 }
                  }
                ]
              },
              "location": {
                "type": "string"
              }
            },
            "required": ["quantity"]
          }
        },
        "required": ["sku", "price"]
      },
      "minItems": 1
    },
    "description": {
      "type": "string",
      "maxLength": 1000
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  }
}
